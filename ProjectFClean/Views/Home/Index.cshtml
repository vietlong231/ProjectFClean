@using Newtonsoft.Json

@model IEnumerable<ProjectFClean.Models.Housekeeper>

@{
    ViewBag.Title = "FClean";
    Layout = "~/Views/Shared/_LayoutPage.cshtml" ;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>JobEntry - Job Portal Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl bg-white p-0">
        <div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
            <div class="container">
                <div class="row g-2">
                    <div class="col-md-10">
                        <div class="row g-2">
                            <div class="col-md-3">
                                <select id="gender" class="form-select border-0" name="gender">
                                    <option value="">Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select id="location" class="form-select border-0" name="location">
                                    <option value="">Location</option>
                                    <option value="Lien Chieu">Liên Chiểu</option>
                                    <option value="Hai Chau">Hải Châu</option>
                                    <option value="Ngu Hanh Son">Ngũ Hành Sơn</option>
                                    <option value="Son Tra">Sơn Trà</option>
                                    <option value="Cam Le">Cẩm Lệ</option>
                                    <option value="Thanh Khe">Thanh Khê</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <input id="name" type="text" class="form-control border-0" placeholder="Name" name="name">
                            </div>

                            <div class="col-md-3">
                                <select id="service" class="form-select border-0" name="service">
                                    <option value="">Service</option>
                                    <option value="Cleaning">Cleaning</option>
                                    <option value="Child Care">Child Care</option>
                                    <option value="Elderly Care">Elderly Care</option>
                                    <option value="Patient Care">Patient Care</option>
                                    <option value="Laundry">Laundry</option>
                                    <option value="Home Cooking">Home Cooking</option>
                                    <option value="Grocery Assistant">Grocery Assistant</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button id="searchBtn" class="btn btn-dark border-0 w-100"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Search End -->
        <!-- Sort Select Start-->
        <select id="sortSelect" class="form-select" style="margin-bottom: 10px; width:100px" aria-label="Default select example">
            <option selected> Sort</option>
            <option value="1">Price Ascending</option>
            <option value="2">Price Decrease</option>
            <option value="3">Experience Decrease</option>
        </select>
        <!-- Sort Select End-->
        <!-- List HouseKeeper Start-->
        <div class="listhousekeeper" style="display: flex; margin-top: 20px">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/img/@(Html.DisplayFor(modelItem => item.HID)).jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Discription)</p>
                        <p class="card-text" style="color:red">@Html.DisplayFor(modelItem => item.Price) VNĐ</p>
                        <a href="#" class="btn btn-primary" style="float:right ">Rent</a>
                    </div>
                </div>
            }
        </div>
        <!-- List HouseKeeper End-->
        <!-- List Post Start-->
        @*<div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <a>
                        @foreach (var post in Model)
                        {
                            <div class="post-item">
                                <h5 class="mb-3">Name of author</h5>
                                <span id="name-service" class="text-truncate me-3"><i class="fa-solid fa-bookmark" style="color: #00b074;"></i> @post.Service.Name_of_service</span>
                                <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i> @post.Price</span>
                                <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i> @post.Location</span>
                                <p>Service: @post.Service.Name_of_service</p>
                                <p>Price: @post.Price</p>
                                <p>Location: @post.Location</p>
                            </div>
                            <div class="Apply">
                                <div class="d-flex mb-3">
                                    <a class="btn btn-primary" href="">Apply Now</a>
                                </div>
                                <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Date Line: 01 Jan, 2045</small>
                            </div>
                        }
                    </a>
                </div>
            </div>
        </div>*@
        <!-- List Post End-->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script>
    $(document).ready(function () {
        $('#searchBtn').click(function () {
            $.ajax({
                url: '@Url.Action("Search", "Home")',
                type: 'GET',
                data: {
                    gender: $('#gender').val(),
                    location: $('#location').val(),
                    name: $('#name').val(),
                    service: $('#service').val()
                },
                success: function (result) {
                    $('.listhousekeeper').html(result);
                }
            });
        });
    });
    </script>

    <script>
    $(document).ready(function () {
        $('#sortSelect').change(function () {
         var selectedOption = $(this).val();
            $.ajax({
                url: '@Url.Action("Sort", "Home")',
                type: 'GET',
                data: { sortOption: selectedOption },
                success: function (result) {
                $('.listhousekeeper').html(result);
                }
            });
        });
    });
    </script>


    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

</body>

</html>
